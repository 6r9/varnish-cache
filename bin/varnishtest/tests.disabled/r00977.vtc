
varnishtest "Test proper fallbacks of client director"

server s1 -repeat 1 {
	rxreq
	txresp -status 200
} -start

varnish v1 -vcl+backend {
	director foo client{
		.retries = 5;
		{ .backend = { .host = "${bad_ip}"; .port = "9090"; } .weight = 1; }
		{ .backend = s1; .weight = 1;}
	}
	sub vcl_recv {
		set req.backend = foo;
		set client.identity = "44.452";
		return (pass);
	}
} -start

client c1 {
	txreq
	rxresp
	expect resp.status == 200
} -run

varnish v1 -expect backend_fail == 1
